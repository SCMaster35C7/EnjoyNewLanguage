		)

	</insert>
	
	<!-- 자막 위시리스트 삭제 -->

	<delete id="deleteSubWish">
		delete from
			wishlist
		where
			wishnum = #{subtitlenum}
	
	</delete>
	
	<!-- 자막 위시리스트 데이터 수 세기 -->
	<select id="dubWishCount" parameterType="String" resultType="int">
		select
			count(*)
		from
			wishlist w, dubbing d
		where
			w.dubbingnum = d.dubbingnum
		and
			useremail=#{useremail}
	</select>
	
	<!-- 더빙 위시리스트 조회 -->
	<select id="selectDubWish" resultType="Wishlist" parameterType="string">
